<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

      <p id="notice"><%= flash[:notice] %></p>

      <h2>Editing Book</h2>

      <% if @book.errors.any? %>
        <div id="error_explanation">
          <h2><%= @book.errors.count %>errors prohibited this obj from being saved:</h2>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_with model:@book, local:true do |f| %>
        <div class="form-group">
          <label for="book_title">Title</label>
          <%= f.text_field :title, class: "form-control book_title" %>
        </div>
        <div class="form-group">
          <label for="book_body">Opinion</label>
          <%= f.text_area :body, rows:'2', class: "form-control book_body" %>
        </div>
        <div class="form-group">
          <%= f.submit 'Update Book', class: "btn btn-success" %>
        </div>
      <% end %>

      <%= link_to "Show", book_path, class: "show_#{@book.id}" %>
      |
      <%= link_to "Back", books_path, class: "Back" %>

    </div>
  </div>
</div>